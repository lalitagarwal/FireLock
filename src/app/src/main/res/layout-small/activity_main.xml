<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="20dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLEASE SELECT YOUR CATEGORY"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:autoText="false" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="1"
        android:orientation="horizontal"
        android:rowCount="5"
        android:paddingTop="40dp"
        android:paddingLeft="50dp"
        android:paddingRight="40dp"
        android:layout_centerVertical="true"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Immediate, Transparent"
            android:id="@+id/btn_imm_trans"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:onClick="btnClickHandler_imm_trans"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Immediate, Dark"
            android:id="@+id/btn_imm_dark"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:onClick="btnClickHandler_imm_dark"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delayed, Dark, PIN-Start"
            android:id="@+id/btn_del_dark_pin_start"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:onClick="btnClickHandler_del_dark_pin_start"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delayed, Dark, PIN-End"
            android:id="@+id/btn_del_dark_pin_end"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:onClick="btnClickHandler_del_dark_pin_end"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delayed, Dark, PIN-Middle"
            android:id="@+id/btn_del_dark_numpad_middle"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:onClick="btnClickHandler_del_dark_pin_middle"
            />
    </GridLayout>
</RelativeLayout>
